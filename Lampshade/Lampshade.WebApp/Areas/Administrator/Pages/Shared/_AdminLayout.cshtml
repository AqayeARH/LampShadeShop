    <!-- Counter Up -->
    <!-- =============================================== */ -->
    <!-- jQuery(document).ready(function($) { -->
    <!-- $('.counter').counterUp({ -->
    <!-- delay: 100, -->
    <!-- time: 1200 -->
    <!-- }); -->
    <!-- }); -->
    <!-- </script> -->
    @await RenderSectionAsync("Scripts",false)

</body>
</html>