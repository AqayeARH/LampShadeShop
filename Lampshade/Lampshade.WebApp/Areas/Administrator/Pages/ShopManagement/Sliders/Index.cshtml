@page
@model Lampshade.WebApp.Areas.Administrator.Pages.ShopManagement.Sliders.IndexModel
@{
    ViewData["Title"] = "مدیریت اسلایدر ها";
}

<div class="row">
    <div class="col-sm-12">
        <h4 class="page-title pull-right">@ViewData["title"]</h4>
        <p class="pull-left">
            <a class="btn btn-success btn-lg" href="#showmodal=@Url.Page("Index", "Create")">ایجاد اسلایدر جدید</a>
        </p>
    </div>
</div>

<div class="row" id="ProductCategoriesDiv">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">لیست اسلایدر ها</h3>
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-md-12 col-sm-12 col-xs-12">
                        <table id="datatable" class="table table-striped table-bordered">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>عکس</th>
                                    <th>نام</th>
                                    <th>عنوان</th>
                                    <th>تاریخ ایجاد</th>
                                    <th>وضعیت</th>
                                    <th>عملیات</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.Sliders)
                                {
                                    <tr>
                                        <td>@item.Id</td>
                                        <td>
                                            <img src="@item.Picture" style="width: 70px; height: 70px" alt="تصویر اسلایدر @item.Heading" />
                                        </td>
                                        <td>@item.Heading</td>
                                        <td>@item.Title</td>
                                        <td>@item.CreationDate</td>
                                        <td>
                                            @if (item.IsRemoved)
                                            {
                                                <p class="text-danger">غیرفعال</p>
                                            }
                                            else
                                            {
                                                <p class="text-success">فعال</p>
                                            }
                                        </td>
                                        <td>
                                            <a class="btn btn-warning pull-right m-rl-5"
                                               href="#showmodal=@Url.Page("Index", "Edit", new { id = item.Id })">
                                                <i class="fa fa-edit"></i>ویرایش
                                            </a>
                                            @if (item.IsRemoved)
                                            {
                                                <a class="btn btn-success btn-sm pull-right m-rl-5"
                                                   asp-page="Index" asp-page-handler="Restore" asp-route-id="@item.Id">
                                                    <i class="fa fa-check"></i>فعال
                                                </a>
                                            }
                                            else
                                            {
                                                <a class="btn btn-danger btn-sm pull-right m-rl-5"
                                                   asp-page="Index" asp-page-handler="Remove" asp-route-id="@item.Id">
                                                    <i class="fa fa-remove"></i>غیرفعال
                                                </a>
                                            }
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/admin/assets/datatables/jquery.dataTables.min.js"></script>
    <script src="~/admin/assets/datatables/dataTables.bootstrap.js"></script>


    <script type="text/javascript">
        $(document).ready(function () {
            $('#datatable').dataTable();
        });
    </script>
}